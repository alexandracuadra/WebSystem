@model SistemaWeb.Contexto.aula

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           Nombre aula
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Ubicasion
            <div class="col-md-10">
                @Html.EditorFor(model => model.ubicasion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ubicasion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Ac
            <div class="col-md-10">
                @Html.EditorFor(model => model.ac, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ac, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Capacidad
            <div class="col-md-10">
                @Html.EditorFor(model => model.capacidad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.capacidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Equipos
            <div class="col-md-10">
                @Html.EditorFor(model => model.n_equipo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.n_equipo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Tipo de aula
            <div class="col-md-10">
                @Html.DropDownList("cod_tipoaula", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.cod_tipoaula, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Departamento
            <div class="col-md-10">
                @Html.DropDownList("cod_dpto", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.cod_dpto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
