@model IEnumerable<SistemaWeb.Contexto.profesore>

@{ ViewBag.Title = "Index";

               }


<div class="card">
    <div class="card-header">
        <a href="#" data-toggle="modal" data-target="#modaldialog" onclick="loadData('/Profesores/Create', 'contentdialog')" class="btn btn-sm btn-info float-lg-right">

            <i class="fas fa-plus fa-sm " style="color:black;"></i> Agregar Nuevo
        </a>
        <h2 class="h3 mb-0 text-gray-800 text-center">Docentes</h2>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class=" table table-striped" id="example">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            Cedula
                        </th>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Apellido
                        </th>
                        <th>
                            Telefono
                        </th>
                        <th>
                            Direccion
                        </th>
                        <th>
                            Foto
                        </th>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Acciones
                        </th>
                    </tr>

                </thead>

                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cedula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.foto_ruta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dpto.nombre)
                </td>
                
                <td>
                    <a href="#" data-toggle="modal" data-target="#visualEditar" onclick="loadData('/Profesores/Edit/@item.inss', 'contentedit')">  <Span class='fas fa-edit' style="color:darkgoldenrod;"></Span></a>
                    <a href="#" data-toggle="modal" data-target="#visualDetalle" onclick="loadData('/Profesores/Details/@item.inss', 'contentdetalle')">  <Span class='fas fa-eye' style="color:green;"></Span><br></a>
                    <a href="#" data-toggle="modal" data-target="#visualEliminar" onclick="loadData('/Profesores/Delete/@item.inss', 'contenteliminar')">  <Span class='fas fa-trash' style="color:red;"></Span></a>
                </td>
            </tr>
}

            </table>

        </div>

    </div>
</div>













<div class="modal" id="modaldialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Agregar nuevo profesor</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="contentdialog">
            </div>
        </div>
    </div>
</div>




<div class="modal" id="visualEditar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Actualizar Profesor</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="contentedit">
            </div>
        </div>
    </div>
</div>

<div class="modal" id="visualDetalle" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Detalles de profesores</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="contentdetalle">
            </div>
        </div>
    </div>
</div>


<div class="modal" id="visualEliminar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Eliminar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="contenteliminar">
            </div>
        </div>
    </div>
</div>
