@model IEnumerable<SistemaWeb.Contexto.materia>

@{
    ViewBag.Title = "Index";

   
}


<div class="card shadow">
    <div class="card-header py-3">
        <a href="#" data-toggle="modal" data-target="#modaldialog" onclick="loadData('/materias/Create', 'contentdialog')" class="btn btn-sm btn-info float-lg-right">

            <i class="fas fa-plus fa-sm "></i> Agregar Nuevo
        </a>
        <h4 class="h3 mb-0 text-gray-800 text-center">Listado de materias</h4>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="example">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            Nombre
                        </th>
                        <th></th>
                    </tr>

                </thead>

                @foreach (var item in Model)
                {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                <a href="#" data-toggle="modal" class="btn btn-warning" data-target="#visualEditar" onclick="loadData('/materias/Edit/@item.cod_materia', 'contentedit')">  <i class='fas fa-edit' ></i></a>
                <a href="#" data-toggle="modal" class="btn btn-success" data-target="#visualDetalle" onclick="loadData('/materias/Details/@item.cod_materia', 'contentdetalle')"><i class='fas fa-eye'></i></a>
                <a href="#" data-toggle="modal" class="btn btn-danger" data-target="#visualEliminar" onclick="loadData('/materias/Delete/@item.cod_materia', 'contenteliminar')"><i class='fas fa-trash'></i></a>
            </td>
        </tr>
}

            </table>

        </div>

    </div>

</div>




    <div class="modal" id="modaldialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Crear nueva materia</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="contentdialog">
                </div>
            </div>
        </div>
    </div>




    <div class="modal" id="visualEditar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Actualizar materia</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="contentedit">
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="visualDetalle" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detalles de materia</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="contentdetalle">
                </div>
            </div>
        </div>
    </div>


    <div class="modal" id="visualEliminar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Eliminar</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="contenteliminar">
                </div>
            </div>
        </div>
    </div>
