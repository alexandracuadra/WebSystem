@model IEnumerable<SistemaWeb.Contexto.anolectivo>

@{


    if (ViewBag.displayRole == 0)
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (ViewBag.displayRole == 1)
    {
        Layout = "~/Views/Shared/_LayoutManager.cshtml";
    }
    else if (ViewBag.displayRole == 2)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ano)
        </th>
        <th>
            Activo

        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ano)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.activo)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.cod_ano }) |
            @Html.ActionLink("Details", "Details", new { id = item.cod_ano }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.cod_ano })
        </td>
    </tr>
}

</table>
