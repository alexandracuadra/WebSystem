@model SistemaWeb.Contexto.grupo

@{
    ViewBag.Title = "Delete";
    Layout = null;
}

<h3>Esta seguro de eliminar el registro?</h3>
<div>
   
    <dl class="dl-horizontal">
        <dt>
           Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
           Capacidad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.capacidad)
        </dd>

