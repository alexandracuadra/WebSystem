@model SistemaWeb.Contexto.carrera

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.cod_carrera)

        <div class="form-group">
            Nombre
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Tipo de carrera
            <div class="col-md-10">
                @Html.EditorFor(model => model.tipo_carrera, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tipo_carrera, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Modalidad
            <div class="col-md-10">
                @Html.EditorFor(model => model.modalidad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.modalidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Departamento
            <div class="col-md-10">
                @Html.DropDownList("cod_dpto", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.cod_dpto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
