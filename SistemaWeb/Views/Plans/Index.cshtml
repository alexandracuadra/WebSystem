@model IEnumerable<SistemaWeb.Contexto.Plan>

@{ ViewBag.Title = "Index";

               
}


<div class="card">
    <div class="card-header">
        <a href="#" data-toggle="modal" data-target="#modaldialog" onclick="loadData('/Plans/Create', 'contentdialog')" class="btn btn-sm btn-info float-lg-right">

            <i class="fas fa-plus fa-sm " style="color:black;"></i> Agregar Nuevo
        </a>
        <h2 class="h3 mb-0 text-gray-800 text-center">Planes de estudio</h2>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class=" table table-striped" id="example">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Total de credito
                        </th>
                        @*<th>
                            Fecha de inicio
                        </th>*@
                        @*<th>
                            Fecha de fin
                        </th>*@
                        <th>
                            Numero de ciclos
                        </th>
                        <th>
                            Carrera
                        </th>
                        <th></th>
                    </tr>

                </thead>

                @foreach (var item in Model)
                {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total_credito)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.fecha_ini)
            </td>*@
            @*<td>
                @Html.DisplayFor(modelItem => item.fecha_fin)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Nciclos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.carrera.nombre)
            </td>
            <td>

                <a href="#" data-toggle="modal" class="btn btn-warning" data-target="#visualEditar" onclick="loadData('/Plans/Edit/@item.cod_plan', 'contentedit')">  <i class='fas fa-edit' ></i></a>
                <a href="#" data-toggle="modal" class="btn btn-success" data-target="#visualDetalle" onclick="loadData('/Plans/Details/@item.cod_plan', 'contentdetalle')">  <i class='fas fa-eye' ></i><br></a>
                <a href="#" data-toggle="modal" class="btn-danger" data-target="#visualEliminar" onclick="loadData('/Plans/Delete/@item.cod_plan', 'contenteliminar')">  <i class='fas fa-trash' ></i></a>

            </td>
        </tr>}

            </table>

        </div>

    </div>
</div>







<div class="modal" id="modaldialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Crear nuevo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="contentdialog">
            </div>
        </div>
    </div>
</div>




<div class="modal" id="visualEditar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Actualizar plan</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="contentedit">
            </div>
        </div>
    </div>
</div>

<div class="modal" id="visualDetalle" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Detalles de plan</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="contentdetalle">
            </div>
        </div>
    </div>
</div>


<div class="modal" id="visualEliminar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Eliminar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="contenteliminar">
            </div>
        </div>
    </div>
</div>



